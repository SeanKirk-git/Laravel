{
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public/build" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "public/index.php" }
  ],
  "env": {
    "APP_ENV": "production",
    "NODE_ENV": "production"
  }
}
